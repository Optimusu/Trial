<EditForm Model="Usuario" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="row">
            <!-- Primera columna -->
            <div class="col-md-6">
                <!-- Nombre -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.FirstName)
                        </span>
                        <InputText class="form-control" placeholder="First name..." @bind-Value="Usuario.FirstName" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.FirstName)" />
                </div>

                <!-- Apellido -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.LastName)
                        </span>
                        <InputText class="form-control" placeholder="Last name..." @bind-Value="Usuario.LastName" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.LastName)" />
                </div>

                <!-- Tipo Documento -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.TypeDocument)
                        </span>
                        <InputText class="form-control" placeholder="Type number..." @bind-Value="Usuario.TypeDocument" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.TypeDocument)" />
                </div>

                <!-- Documento -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.Nro_Document)
                        </span>
                        <InputText class="form-control" placeholder="Document number..." @bind-Value="Usuario.Nro_Document" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.Nro_Document)" />
                </div>

                <!-- Teléfono -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.PhoneNumber)
                        </span>
                        <InputText class="form-control" placeholder="Phone..." @bind-Value="Usuario.PhoneNumber" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.PhoneNumber)" />
                </div>

                <!-- Dirección -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.Address)
                        </span>
                        <InputText class="form-control" placeholder="Address..." @bind-Value="Usuario.Address" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.Address)" />
                </div>
            </div>

            <!-- Segunda columna -->
            <div class="col-md-6">
                <!-- Dirección -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.Job)
                        </span>
                        <InputText class="form-control" placeholder="Job..." @bind-Value="Usuario.Job" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.Job)" />
                </div>

                <!-- Dirección -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.UserName)
                        </span>
                        <InputText class="form-control" placeholder="Email..." @bind-Value="Usuario.UserName" />
                    </div>
                    <ValidationMessage For="@(() => Usuario.UserName)" />
                </div>

                <!-- Estado activo -->
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Usuario.Active)
                        </span>
                        <div class="d-flex align-items-center ps-3">
                            <InputCheckbox @bind-Value="Usuario.Active" class="form-check-input me-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Imagen -->
    <InputImage ImageSelected="ImageSelected" ImageUrl="@ImageUrl" />

    <!-- Botones -->
    <div class="d-flex justify-content-center gap-3 mt-5">
        <button type="submit" class="btn btn-gradient-primary" style="min-width: 160px;">
            <i class="fa fa-floppy-disk me-2"></i> Save
        </button>
        <button class="btn btn-gradient-black" @onclick="ReturnAction" style="min-width: 160px;">
            <i class="fa fa-arrow-left"></i> Back
        </button>
    </div>

</EditForm>
