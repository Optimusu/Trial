<EditForm Model="UsuarioRole" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <!-- UserType -->
    <div class="mb-0">
        @if (ListUserType is null)
        {
            <Loading />
        }
        else
        {
            <div class="input-group">
                <span class="input-group-text" style="width: 150px">User Role</span>
                <select class="form-select" @onchange="UsertTypeChanged">
                    @foreach (var item in ListUserType)
                    {
                        <option value="@item.Value">@item.Name</option>
                    }
                </select>
            </div>
        }
    </div>


    <!-- Botones -->
    <div class="d-flex justify-content-center gap-3 mt-5">
        <button type="submit" class="btn btn-gradient-primary" style="min-width: 160px;">
            <i class="fa fa-floppy-disk me-2"></i> Save
        </button>
        <button class="btn btn-gradient-black" @onclick="ReturnAction" style="min-width: 160px;">
            <i class="fa fa-arrow-left"></i> Back
        </button>
    </div>
</EditForm>