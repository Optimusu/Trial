<EditForm Model="SoftPlan" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
               @GetDisplayName(() => SoftPlan.Name)
            </span>
            <InputText class="form-control" placeholder="Plan name..." @bind-Value="SoftPlan.Name" />
        </div>
        <ValidationMessage For="@(() => SoftPlan.Name)" />
    </div>

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => SoftPlan.Meses)
            </span>
            <InputNumber class="form-control" placeholder="Number of months" @bind-Value="SoftPlan.Meses" />
        </div>
        <ValidationMessage For="@(() => SoftPlan.Meses)" />
    </div>

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => SoftPlan.Price)
            </span>
            <InputNumber class="form-control" placeholder="$0.00" step="0.01" @bind-Value="SoftPlan.Price" />
        </div>
        <ValidationMessage For="@(() => SoftPlan.Price)" />
    </div>

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => SoftPlan.TrialsCount)
            </span>
            <InputNumber class="form-control" placeholder="Trial clients..." @bind-Value="SoftPlan.TrialsCount" />
        </div>
        <ValidationMessage For="@(() => SoftPlan.TrialsCount)" />
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => SoftPlan.Active)
            </span>
            <div class="d-flex align-items-center ps-3">
                <InputCheckbox @bind-Value="SoftPlan.Active" class="form-check-input me-2" />
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="d-flex justify-content-center gap-3 mt-5">
        <button type="submit" class="btn btn-gradient-primary" style="min-width: 160px;">
            <i class="fa fa-floppy-disk me-2"></i> Guardar
        </button>
        <button class="btn btn-gradient-black" @onclick="ReturnAction" style="min-width: 160px;">
            <i class="fa fa-arrow-left"></i> Volver
        </button>
    </div>
</EditForm>