<EditForm Model="Corporation" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="row">
            <!-- Primera columna -->
            <div class="col-md-6">
                <!-- Nombre -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Corporation.Name)
                        </span>
                        <InputText class="form-control" placeholder="Corporation name..." @bind-Value="Corporation.Name" />
                    </div>
                    <ValidationMessage For="@(() => Corporation.Name)" />
                </div>

                <!-- Tipo Documento -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Corporation.TypeDocument)
                        </span>
                        <InputText class="form-control" placeholder="Type number..." @bind-Value="Corporation.TypeDocument" />
                    </div>
                    <ValidationMessage For="@(() => Corporation.TypeDocument)" />
                </div>

                <!-- Documento -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Corporation.NroDocument)
                        </span>
                        <InputText class="form-control" placeholder="Document number..." @bind-Value="Corporation.NroDocument" />
                    </div>
                    <ValidationMessage For="@(() => Corporation.NroDocument)" />
                </div>

                <!-- Teléfono -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Corporation.Phone)
                        </span>
                        <InputText class="form-control" placeholder="Phone..." @bind-Value="Corporation.Phone" />
                    </div>
                    <ValidationMessage For="@(() => Corporation.Phone)" />
                </div>

                <!-- Dirección -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Corporation.Address)
                        </span>
                        <InputText class="form-control" placeholder="Address..." @bind-Value="Corporation.Address" />
                    </div>
                    <ValidationMessage For="@(() => Corporation.Address)" />
                </div>
            </div>

            <!-- Segunda columna -->
            <div class="col-md-6">
                <!-- País -->
                <div class="mb-0">
                    @if (Countries is null)
                    {
                        <Loading />
                    }
                    else
                    {
                        <div class="input-group">
                            <span class="input-group-text" style="width: 150px">Seleccionar País</span>
                            <select class="form-select" value="@Corporation.CountryId" @onchange="CountryChanged">
                                @foreach (var item in Countries)
                                {
                                    <option value="@item.CountryId">@item.Name</option>
                                }
                            </select>
                        </div>
                    }
                </div>
                <!-- Plan -->
                <div class="mb-0">
                    @if (SoftPlans is null)
                    {
                        <Loading />
                    }
                    else
                    {
                        <div class="input-group">
                            <span class="input-group-text" style="width: 150px">Seleccione Plan</span>
                            <select class="form-select" value="@Corporation.SoftPlanId" @onchange="SoftPlanChanged">
                                @foreach (var item in SoftPlans)
                                {
                                    <option value="@item.SoftPlanId">@item.Name</option>
                                }
                            </select>
                        </div>
                    }
                </div>

                <!-- Fecha inicio -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">Inicio</span>
                        <input type="date" class="form-control"
                               @bind="Corporation.DateStart"
                               min="@DateMin?.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <!-- Fecha fin -->
                <div class="mb-0">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">Fin</span>
                        <input type="date" class="form-control"
                               @bind="Corporation.DateEnd"
                               min="@DateMin?.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <!-- Estado activo -->
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text" style="width: 150px">
                            @GetDisplayName(() => Corporation.Active)
                        </span>
                        <div class="d-flex align-items-center ps-3">
                            <InputCheckbox @bind-Value="Corporation.Active" class="form-check-input me-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Imagen -->
    <InputImage ImageSelected="ImageSelected" ImageUrl="@ImageUrl" />

    <!-- Botones -->
    <div class="d-flex justify-content-center gap-3 mt-5">
        <button type="submit" class="btn btn-gradient-primary" style="min-width: 160px;">
            <i class="fa fa-floppy-disk me-2"></i> Guardar
        </button>
        <button class="btn btn-gradient-black" @onclick="ReturnAction" style="min-width: 160px;">
            <i class="fa fa-arrow-left"></i> Volver
        </button>
    </div>

</EditForm>


