<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4" style="border-radius: 12px; max-width: 500px;">
            <EditForm Model="changePasswordDTO" OnValidSubmit="ChangePasswordAsync">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label">@GetDisplayName(() => changePasswordDTO.CurrentPassword)</label>
                    <InputText type="password" class="form-control" @bind-Value="changePasswordDTO.CurrentPassword" />
                    <ValidationMessage For="@(() => changePasswordDTO.CurrentPassword)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">@GetDisplayName(() => changePasswordDTO.NewPassword)</label>
                    <InputText type="password" class="form-control" @bind-Value="changePasswordDTO.NewPassword" />
                    <ValidationMessage For="@(() => changePasswordDTO.NewPassword)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">@GetDisplayName(() => changePasswordDTO.Confirm)</label>
                    <InputText type="password" class="form-control" @bind-Value="changePasswordDTO.Confirm" />
                    <ValidationMessage For="@(() => changePasswordDTO.Confirm)" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-gradient-primary" style="width: 48%;">
                        <i class="fa fa-save me-2"></i> Save
                    </button>
                    <button type="button" class="btn btn-gradient-black" @onclick="ReturnAction" style="width: 48%;">
                        <i class="fa fa-arrow-left me-2"></i> Cancel
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

