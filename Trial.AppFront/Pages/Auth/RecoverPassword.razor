<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-4" style="border-radius: 12px; max-width: 500px;">
            <EditForm Model="EmailDTO" OnValidSubmit="SendRecoverPasswordEmailTokenAsync">
                <DataAnnotationsValidator />

                <!-- Campo de email -->
                <div class="mb-3">
                    <label class="form-label">@GetDisplayName(() => EmailDTO.Email)</label>
                    <InputText type="email" class="form-control" placeholder="you@example.com" @bind-Value="EmailDTO.Email" />
                    <ValidationMessage For="@(() => EmailDTO.Email)" />
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-gradient-primary d-flex align-items-center gap-2" style="width: 48%;">
                        <i class="fa fa-paper-plane"></i> Send
                    </button>
                    <button type="button" class="btn btn-gradient-black d-flex align-items-center gap-2" @onclick="CloseModal" style="width: 48%;">
                        <i class="fa fa-arrow-left"></i> Cancel
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

