@page "/api/accounts/ResetPassword"

<div class="d-flex justify-content-center pt-5">
    <div class="card shadow p-4" style="max-width: 500px; border-radius: 12px;">
        <!-- Cabecera -->
        <div class="mb-4 text-center">
            <h5 class="mb-1">
                <i class="fa fa-key me-2 text-dark"></i> Change Password
            </h5>
            <p class="text-muted mb-0">Enter your email and new password to reset your account.</p>
        </div>

        <EditForm Model="resetPasswordDTO" OnValidSubmit="ChangePasswordAsync">
            <DataAnnotationsValidator />

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label">@GetDisplayName(() => resetPasswordDTO.Email)</label>
                <InputText type="email" class="form-control" @bind-Value="resetPasswordDTO.Email" />
                <ValidationMessage For="@(() => resetPasswordDTO.Email)" />
            </div>

            <!-- New Password -->
            <div class="mb-3">
                <label class="form-label">@GetDisplayName(() => resetPasswordDTO.NewPassword)</label>
                <InputText type="password" class="form-control" @bind-Value="resetPasswordDTO.NewPassword" />
                <ValidationMessage For="@(() => resetPasswordDTO.NewPassword)" />
            </div>

            <!-- Confirm Password -->
            <div class="mb-4">
                <label class="form-label">@GetDisplayName(() => resetPasswordDTO.ConfirmPassword)</label>
                <InputText type="password" class="form-control" @bind-Value="resetPasswordDTO.ConfirmPassword" />
                <ValidationMessage For="@(() => resetPasswordDTO.ConfirmPassword)" />
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-gradient-primary d-flex align-items-center gap-2" style="width: 48%;">
                    <i class="fa fa-save"></i> Save
                </button>
                <a href="/" class="btn btn-gradient-black d-flex align-items-center gap-2" style="width: 48%;">
                    <i class="fa fa-arrow-left"></i> Cancel
                </a>
            </div>
        </EditForm>
    </div>
</div>
