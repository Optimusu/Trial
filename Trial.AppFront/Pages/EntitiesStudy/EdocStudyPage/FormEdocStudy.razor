<EditForm Model="EdocStudy" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => EdocStudy.Title)
            </span>
            <InputText class="form-control" placeholder="Document Title..." @bind-Value="EdocStudy.Title" />
        </div>
        <ValidationMessage For="@(() => EdocStudy.Title)" />
    </div>

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => EdocStudy.Comments)
            </span>
            <InputTextArea class="form-control" placeholder="Document Title..." @bind-Value="EdocStudy.Comments" />
        </div>
        <ValidationMessage For="@(() => EdocStudy.Comments)" />
    </div>

    <InputDocument Label="Subir documento"
                   AcceptExtensions=".pdf,.docx"
                   FileSelected="HandleFile" />


    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => EdocStudy.Signing)
            </span>
            <div class="d-flex align-items-center ps-3">
                <InputCheckbox @bind-Value="EdocStudy.Signing" class="form-check-input me-2" />
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="d-flex justify-content-center gap-3 mt-5">
        <button type="submit" class="btn btn-gradient-primary" style="min-width: 160px;">
            <i class="fa fa-floppy-disk me-2"></i> Save
        </button>
        <button class="btn btn-gradient-black" @onclick="ReturnAction" style="min-width: 160px;">
            <i class="fa fa-arrow-left"></i> Back
        </button>
    </div>
</EditForm>