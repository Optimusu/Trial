@page "/studies/edoccategory/{Id:guid}"
@attribute [Authorize(Roles = "Administrator")]

<div class="container pt-4">
    <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
        <h3 class="mb-4">Edocs Categories</h3>
        @if (Study is null)
        {
            <Loading />
        }
        else
        {
            <h3>@Study!.FullStudy</h3>

            <div class="col-sm-12">
                <div class="row align-items-center mb-3">
                    <div class="col-md-3 d-flex justify-content-start">
                        <button class="btn btn-gradient-primary d-flex align-items-center gap-2" style="width:130px" @onclick="() => ShowModalAsync()">
                            <i class="fa fa-plus-circle"></i> New
                        </button>
                        <a class="btn btn-gradient-black d-flex align-items-center gap-2 ms-2" style="width:130px" href="@($"/studies")">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>

                    </div>
                </div>
                <br />
            </div>
        }
        <hr />
        <GenericList MyList="EdocCategories">
            <Body>
                @if (EdocCategories is not null)
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Category</th>
                                    <th>Files</th>
                                    <th>Document</th>
                                    <th></th>
                                    <th colspan="2">Category</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in EdocCategories!)
                                {
                                    <tr>

                                        <td>
                                            <button title="New Document" class="btn btn-outline-dark btn-sm" @onclick="() => ToggleEdocStudiesAsync(item.EdocCategoryId)">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.TotalEdocStudy
                                        </td>
                                        <td style="width:1px;">
                                            <button title="New Document" class="btn-shadow-black" @onclick="() => ShowModalEdocAsync(item.EdocCategoryId)">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </td>
                                        <td style="width:1px;">
                                            <span class="mx-1">|</span>
                                        </td>
                                        <td style="width:1px;">
                                            <button class="btn-shadow-black" @onclick="() => ShowModalAsync(item.EdocCategoryId, true)">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        </td>
                                        <td style="width:1px;">
                                            <button class="btn-shadow-danger" @onclick="() => DeleteAsync(item.EdocCategoryId)">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    @if (ExpandedCategories.ContainsKey(item.EdocCategoryId)
                                                                && ExpandedCategories[item.EdocCategoryId]
                                                                && EdocStudiesByCategory.TryGetValue(item.EdocCategoryId, out var studies)
                                                                && studies.Any())
                                    {
                                        <tr>
                                            <td colspan="4" style="background-color: lightgray;" class="border p-3">
                                                <ul class="list-group list-group-flush ms-4">
                                                    @foreach (var study in studies)
                                                    {
                                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                                            <span><i class="fa fa-file-alt me-2 text-primary"></i>@study.FileNameOriginal</span>
                                                            <span class="badge bg-secondary">@study.DateCreated?.ToShortDateString()</span>
                                                        </li>
                                                    }
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }

            </Body>
        </GenericList>
        <!-- Tabla -->
        <hr />
        @if (EdocCategories is not null)
        {
            <!-- Paginación -->
            <Pagination CurrentPage="CurrentPage"
                        SelectedPage="SelectedPage"
                        TotalPages="TotalPages" />
        }
    </div>
</div>
