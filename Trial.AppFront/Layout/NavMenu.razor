<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="">Trial.AppFront</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <!-- Ítem: Counter -->
        <div class="nav-item px-3">
            <NavLink class="nav-link text-white" href="/">
                <span class="fa fa-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="Administrator">
            <Authorized>
                <!-- Grupo: Configuración -->
                <div class="nav-item px-3">
                    <button class="nav-link text-white d-flex align-items-center gap-2 w-100"
                            @onclick="submenu1"
                            style="background: none; border: none;">
                        <span class="fa fa-shield" aria-hidden="true"></span> General
                        <span class="ms-auto fa @(expandSubMenu1 ? "fa-chevron-up" : "fa-chevron-down")"></span>
                    </button>

                    @if (expandSubMenu1)
                    {
                        <NavLink class="nav-link text-white ps-4" href="/documentTypes">
                            <span class="fa fa-users me-2" aria-hidden="true"></span> Document Type
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/enrollings">
                            <span class="fa fa-users me-2" aria-hidden="true"></span> Enrolling
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/therapeutics">
                            <span class="fa fa-users me-2" aria-hidden="true"></span> Therapeutic Area
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/indications">
                            <span class="fa fa-users me-2" aria-hidden="true"></span> Indication
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/sponsors">
                            <span class="fa fa-users me-2" aria-hidden="true"></span> Sponsor
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/cros">
                            <span class="fa fa-users me-2" aria-hidden="true"></span> CRO
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/irbs">
                            <span class="fa fa-users me-2" aria-hidden="true"></span> IRB
                        </NavLink>
                    }
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <!-- Grupo: Opciones -->
                <div class="nav-item px-3">
                    <button class="nav-link text-white d-flex align-items-center gap-2 w-100"
                            @onclick="submenu2"
                            style="background: none; border: none;">
                        <span class="fa fa-th-large" aria-hidden="true"></span> Configuration
                        <span class="ms-auto fa @(expandSubMenu2 ? "fa-chevron-up" : "fa-chevron-down")"></span>
                    </button>

                    @if (expandSubMenu2)
                    {
                        <NavLink class="nav-link text-white ps-4" href="/softplans">
                            <span class="fa fa-cart-plus me-2" aria-hidden="true"></span> Sofplans
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/corporations">
                            <span class="fa fa-cash-register me-2" aria-hidden="true"></span> Corporation
                        </NavLink>
                        <NavLink class="nav-link text-white ps-4" href="/managers">
                            <span class="fa fa-cash-register me-2" aria-hidden="true"></span> Manager
                        </NavLink>
                    }
                </div>
            </Authorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private bool expandSubMenu1;
    private bool expandSubMenu2;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void submenu1()
    {
        expandSubMenu1 = !expandSubMenu1;
        expandSubMenu2 = false;
    }

    private void submenu2()
    {
        expandSubMenu2 = !expandSubMenu2;
        expandSubMenu1 = false;
    }
}
