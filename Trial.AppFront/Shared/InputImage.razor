<div class="mb-3">
    <label class="form-label">@Label</label>
    <div class="input-group">
        <input type="text"
               class="form-control"
               placeholder="Seleccionar Imagen"
               readonly
               value="@FileName" />
        <label class="input-group-btn">
            <span class="btn btn-dark px-3">
                Search
                <InputFile OnChange="OnChange" class="d-none" accept=".jpg,.jpeg,.png" />
            </span>
        </label>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(ImageBase64) || (!string.IsNullOrWhiteSpace(ImageUrl) && ImageUrl.StartsWith("http")))
{
    <div class="mt-2">
        <img src="@GetImageSource()"
             alt="@Label"
             class="image-preview"
             height="180" />
    </div>
}
